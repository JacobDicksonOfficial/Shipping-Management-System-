                            </HBox.margin>
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Button>
                        <Button onAction="#handleRemoveGood" prefHeight="26.0" prefWidth="114.0" style="-fx-background-color: #535353;" text="Remove Good" textFill="WHITE">
                            <HBox.margin>
                                <Insets right="10.0" />
                            </HBox.margin>
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
            </bottom>

        </BorderPane>
    </children>
